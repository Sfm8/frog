    <script>
        // –ò–≥—Ä–æ–≤—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ
        let gameState = {
            score: 0,
            level: 1,
            isPlaying: false,
            frogs: [],
            lilyPads: [],
            nextFrogId: 1,
            nextPadId: 1,
            selectedFrog: null
        };

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–≥—Ä—ã
        function initGame() {
            // –°–æ–∑–¥–∞–µ–º –∫—É–≤—à–∏–Ω–∫–∏
            const padPositions = [
                {x: 150, y: 200}, {x: 400, y: 150}, {x: 650, y: 200}, {x: 850, y: 180},
                {x: 200, y: 350}, {x: 500, y: 320}, {x: 750, y: 380},
                {x: 100, y: 480}, {x: 350, y: 500}, {x: 600, y: 450}, {x: 900, y: 500}
            ];

            padPositions.forEach(pos => createLilyPad(pos.x, pos.y));

            // –°–æ–∑–¥–∞–µ–º –Ω–∞—á–∞–ª—å–Ω—ã—Ö –ª—è–≥—É—à–µ–∫
            createFrog(150, 200);
            createFrog(400, 150);
            createFrog(650, 200);

            updateUI();
        }

        // –°–æ–∑–¥–∞–Ω–∏–µ –∫—É–≤—à–∏–Ω–∫–∏
        function createLilyPad(x, y) {
            const pad = {
                id: gameState.nextPadId++,
                x: x,
                y: y,
                occupied: false
            };

            gameState.lilyPads.push(pad);

            const padElement = document.createElementNS("http://www.w3.org/2000/svg", "use");
            padElement.setAttribute("href", "#lilyPadTemplate");
            padElement.setAttribute("x", x);
            padElement.setAttribute("y", y);
            padElement.setAttribute("id", `pad-${pad.id}`);
            padElement.classList.add("lily-pad");
            
            padElement.addEventListener("click", () => onPadClick(pad));

            document.getElementById("lilyPads").appendChild(padElement);
        }

        // –°–æ–∑–¥–∞–Ω–∏–µ –ª—è–≥—É—à–∫–∏
        function createFrog(x, y) {
            const frog = {
                id: gameState.nextFrogId++,
                x: x,
                y: y,
                targetX: x,
                targetY: y,
                isJumping: false,
                color: getRandomFrogColor(),
                name: `–õ—è–≥—É—à–∫–∞ ${gameState.nextFrogId - 1}`
            };

            gameState.frogs.push(frog);

            const frogElement = document.createElementNS("http://www.w3.org/2000/svg", "use");
            frogElement.setAttribute("href", "#frogTemplate");
            frogElement.setAttribute("x", x);
            frogElement.setAttribute("y", y);
            frogElement.setAttribute("id", `frog-${frog.id}`);
            frogElement.classList.add("frog");
            
            // –ü—Ä–∏–º–µ–Ω—è–µ–º —Ü–≤–µ—Ç
            frogElement.style.filter = `hue-rotate(${frog.color}deg) drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.3))`;
            
            frogElement.addEventListener("click", () => onFrogClick(frog));

            document.getElementById("frogs").appendChild(frogElement);

            // –û—Ç–º–µ—á–∞–µ–º –∫—É–≤—à–∏–Ω–∫—É –∫–∞–∫ –∑–∞–Ω—è—Ç—É—é
            const pad = findPadAt(x, y);
            if (pad) pad.occupied = true;
        }

        // –°–ª—É—á–∞–π–Ω—ã–π —Ü–≤–µ—Ç –ª—è–≥—É—à–∫–∏
        function getRandomFrogColor() {
            const colors = [0, 60, 120, 180, 240, 300]; // –û—Ç—Ç–µ–Ω–∫–∏
            return colors[Math.floor(Math.random() * colors.length)];
        }

        // –ü–æ–∏—Å–∫ –∫—É–≤—à–∏–Ω–∫–∏ –≤ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç–∞—Ö
        function findPadAt(x, y) {
            return gameState.lilyPads.find(pad => 
                Math.abs(pad.x - x) < 50 && Math.abs(pad.y - y) < 50
            );
        }

        // –ö–ª–∏–∫ –ø–æ –ª—è–≥—É—à–∫–µ - –≤—ã–±–æ—Ä –∞–∫—Ç–∏–≤–Ω–æ–π –ª—è–≥—É—à–∫–∏
        function onFrogClick(frog) {
            if (!gameState.isPlaying || frog.isJumping) return;

            // –°–Ω–∏–º–∞–µ–º –≤—ã–¥–µ–ª–µ–Ω–∏–µ —Å –ø—Ä–µ–¥—ã–¥—É—â–µ–π –ª—è–≥—É—à–∫–∏
            clearSelection();

            // –í—ã–±–∏—Ä–∞–µ–º –Ω–æ–≤—É—é –ª—è–≥—É—à–∫—É
            gameState.selectedFrog = frog;
            const frogElement = document.getElementById(`frog-${frog.id}`);
            frogElement.classList.add("selected");

            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –¥–æ—Å—Ç—É–ø–Ω—ã–µ —Ö–æ–¥—ã
            highlightAvailablePads(frog);
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ —Ç–µ–∫—É—â–µ–º —Ö–æ–¥–µ
            updateCurrentTurn();
        }

        // –û—á–∏—Å—Ç–∫–∞ –≤—ã–±–æ—Ä–∞
        function clearSelection() {
            if (gameState.selectedFrog) {
                const frogElement = document.getElementById(`frog-${gameState.selectedFrog.id}`);
                if (frogElement) {
                    frogElement.classList.remove("selected");
                }
            }
            gameState.selectedFrog = null;
            clearHighlights();
            updateCurrentTurn();
        }

        // –ü–æ–¥—Å–≤–µ—Ç–∫–∞ –¥–æ—Å—Ç—É–ø–Ω—ã—Ö –∫—É–≤—à–∏–Ω–æ–∫
        function highlightAvailablePads(frog) {
            clearHighlights();
            
            gameState.lilyPads.forEach(pad => {
                const padElement = document.getElementById(`pad-${pad.id}`);
                if (!pad.occupied && canJumpTo(frog, pad)) {
                    padElement.classList.add("available");
                }
            });
        }

        // –ü—Ä–æ–≤–µ—Ä–∫–∞ –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç–∏ –ø—Ä—ã–∂–∫–∞
        function canJumpTo(frog, pad) {
            const distance = Math.sqrt(
                Math.pow(frog.x - pad.x, 2) + Math.pow(frog.y - pad.y, 2)
            );
            return distance <= 200; // –ú–∞–∫—Å–∏–º–∞–ª—å–Ω–æ–µ —Ä–∞—Å—Å—Ç–æ—è–Ω–∏–µ –ø—Ä—ã–∂–∫–∞
        }

        // –ö–ª–∏–∫ –ø–æ –∫—É–≤—à–∏–Ω–∫–µ
        function onPadClick(pad) {
            if (!gameState.isPlaying || !gameState.selectedFrog) return;

            const padElement = document.getElementById(`pad-${pad.id}`);
            if (!padElement.classList.contains("available")) return;

            jumpFrogTo(gameState.selectedFrog, pad);
            clearSelection();
        }

        // –ü—Ä—ã–∂–æ–∫ –ª—è–≥—É—à–∫–∏
        function jumpFrogTo(frog, targetPad) {
            if (frog.isJumping || targetPad.occupied) return;

            frog.isJumping = true;
            
            // –û—Å–≤–æ–±–æ–∂–¥–∞–µ–º —Ç–µ–∫—É—â—É—é –∫—É–≤—à–∏–Ω–∫—É
            const currentPad = findPadAt(frog.x, frog.y);
            if (currentPad) currentPad.occupied = false;

            // –ó–∞–Ω–∏–º–∞–µ–º –Ω–æ–≤—É—é –∫—É–≤—à–∏–Ω–∫—É
            targetPad.occupied = true;

            const frogElement = document.getElementById(`frog-${frog.id}`);
            frogElement.classList.add("jumping");

            // –ê–Ω–∏–º–∞—Ü–∏—è –ø—Ä—ã–∂–∫–∞
            setTimeout(() => {
                frog.x = targetPad.x;
                frog.y = targetPad.y;
                frogElement.setAttribute("x", frog.x);
                frogElement.setAttribute("y", frog.y);

                // –≠—Ñ—Ñ–µ–∫—Ç –≤—Å–ø–ª–µ—Å–∫–∞
                createSplashEffect(targetPad.x, targetPad.y);

                // –£–≤–µ–ª–∏—á–∏–≤–∞–µ–º —Å—á–µ—Ç
                gameState.score += 10;
                updateUI();

                frogElement.classList.remove("jumping");
                frog.isJumping = false;

                // –ü—Ä–æ–≤–µ—Ä—è–µ–º —É—Å–ª–æ–≤–∏—è –ø–æ–≤—ã—à–µ–Ω–∏—è —É—Ä–æ–≤–Ω—è
                checkLevelUp();
            }, 300);
        }

        // –≠—Ñ—Ñ–µ–∫—Ç –≤—Å–ø–ª–µ—Å–∫–∞
        function createSplashEffect(x, y) {
            const splash = document.createElementNS("http://www.w3.org/2000/svg", "circle");
            splash.setAttribute("cx", x);
            splash.setAttribute("cy", y);
            splash.setAttribute("r", "5");
            splash.setAttribute("fill", "none");
            splash.setAttribute("stroke", "#4169E1");
            splash.setAttribute("stroke-width", "3");
            splash.setAttribute("opacity", "0.8");
            splash.classList.add("ripple-animation");

            document.getElementById("effects").appendChild(splash);

            setTimeout(() => {
                splash.remove();
            }, 1000);
        }

        // –û—á–∏—Å—Ç–∫–∞ –ø–æ–¥—Å–≤–µ—Ç–∫–∏
        function clearHighlights() {
            gameState.lilyPads.forEach(pad => {
                const padElement = document.getElementById(`pad-${pad.id}`);
                padElement.classList.remove("available");
            });
        }

        // –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–æ–≤—ã—à–µ–Ω–∏—è —É—Ä–æ–≤–Ω—è
        function checkLevelUp() {
            const requiredScore = gameState.level * 100;
            if (gameState.score >= requiredScore) {
                gameState.level++;
                addFrog(); // –î–æ–±–∞–≤–ª—è–µ–º –Ω–æ–≤—É—é –ª—è–≥—É—à–∫—É
                updateUI();
            }
        }

        // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –Ω–æ–≤–æ–π –ª—è–≥—É—à–∫–∏
        function addFrog() {
            const availablePads = gameState.lilyPads.filter(pad => !pad.occupied);
            if (availablePads.length > 0) {
                const randomPad = availablePads[Math.floor(Math.random() * availablePads.length)];
                createFrog(randomPad.x, randomPad.y);
            }
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ —Ç–µ–∫—É—â–µ–º —Ö–æ–¥–µ
        function updateCurrentTurn() {
            const turnElement = document.getElementById("currentTurn");
            if (gameState.selectedFrog) {
                turnElement.textContent = `–•–æ–¥: ${gameState.selectedFrog.name}`;
                turnElement.style.background = "rgba(255, 215, 0, 0.3)";
                turnElement.style.borderColor = "#FFD700";
            } else {
                turnElement.textContent = "–í—ã–±–µ—Ä–∏—Ç–µ –ª—è–≥—É—à–∫—É –¥–ª—è —Ö–æ–¥–∞";
                turnElement.style.background = "rgba(255, 255, 224, 0.8)";
                turnElement.style.borderColor = "#FF6347";
            }
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
        function updateUI() {
            document.getElementById("score").textContent = gameState.score;
            document.getElementById("level").textContent = gameState.level;
        }

        // –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –∏–≥—Ä–æ–π
        function startGame() {
            gameState.isPlaying = true;
            updateCurrentTurn();
            console.log("–ò–≥—Ä–∞ –Ω–∞—á–∞—Ç–∞!");
        }

        function pauseGame() {
            gameState.isPlaying = !gameState.isPlaying;
            if (!gameState.isPlaying) {
                clearSelection();
            }
            updateCurrentTurn();
            console.log(gameState.isPlaying ? "–ò–≥—Ä–∞ –≤–æ–∑–æ–±–Ω–æ–≤–ª–µ–Ω–∞!" : "–ò–≥—Ä–∞ –ø—Ä–∏–æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞!");
        }

        function resetGame() {
            // –û—á–∏—â–∞–µ–º –∏–≥—Ä–æ–≤–æ–µ –ø–æ–ª–µ
            document.getElementById("frogs").innerHTML = "";
            document.getElementById("lilyPads").innerHTML = "";
            document.getElementById("effects").innerHTML = "";

            // –°–±—Ä–∞—Å—ã–≤–∞–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ
            gameState = {
                score: 0,
                level: 1,
                isPlaying: false,
                frogs: [],
                lilyPads: [],
                nextFrogId: 1,
                nextPadId: 1,
                selectedFrog: null
            };

            // –ü–µ—Ä–µ–∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º
            initGame();
            console.log("–ò–≥—Ä–∞ —Å–±—Ä–æ—à–µ–Ω–∞!");
        }

        // –ó–∞–ø—É—Å–∫ –∏–≥—Ä—ã –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        window.addEventListener("load", () => {
            initGame();
            console.log("–ò–≥—Ä–∞ –≥–æ—Ç–æ–≤–∞ –∫ –∑–∞–ø—É—Å–∫—É!");
        });
    </script>
</body>
</html>
