        <div class="game-area">
            <svg id="gameArea" width="100%" height="600" viewBox="0 0 1000 600" xmlns="http://www.w3.org/2000/svg">
                <!-- –î–µ—Ñ–∏–Ω–∞—Ü–∏–∏ –¥–ª—è –ø–µ—Ä–µ–∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è -->
                <defs>
                    <!-- –ì—Ä–∞–¥–∏–µ–Ω—Ç –¥–ª—è –≤–æ–¥—ã -->
                    <linearGradient id="waterGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                        <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
                        <stop offset="50%" style="stop-color:#4682B4;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#2E8B57;stop-opacity:1" />
                    </linearGradient>
                    
                    <!-- –®–∞–±–ª–æ–Ω –ª—è–≥—É—à–∫–∏ -->
                    <g id="frogTemplate">
                        <!-- –¢–µ–ª–æ -->
                        <ellipse cx="0" cy="0" rx="25" ry="20" fill="#32CD32" stroke="#228B22" stroke-width="1.5"/>
                        <!-- –ì–æ–ª–æ–≤–∞ -->
                        <ellipse cx="0" cy="-15" rx="20" ry="15" fill="#32CD32" stroke="#228B22" stroke-width="1.5"/>
                        <!-- –ì–ª–∞–∑–∞ -->
                        <ellipse cx="-8" cy="-22" rx="6" ry="8" fill="#32CD32" stroke="#228B22" stroke-width="1"/>
                        <ellipse cx="8" cy="-22" rx="6" ry="8" fill="#32CD32" stroke="#228B22" stroke-width="1"/>
                        <!-- –ó—Ä–∞—á–∫–∏ -->
                        <circle cx="-8" cy="-24" r="3" fill="#000"/>
                        <circle cx="8" cy="-24" r="3" fill="#000"/>
                        <!-- –ë–ª–∏–∫–∏ -->
                        <circle cx="-6" cy="-25" r="1" fill="#FFF"/>
                        <circle cx="10" cy="-25" r="1" fill="#FFF"/>
                        <!-- –†–æ—Ç -->
                        <path d="M -8 -10 Q 0 -5 8 -10" stroke="#228B22" stroke-width="2" fill="none"/>
                        <!-- –õ–∞–ø—ã -->
                        <ellipse cx="-18" cy="-5" rx="8" ry="5" fill="#32CD32" stroke="#228B22" stroke-width="1"/>
                        <ellipse cx="18" cy="-5" rx="8" ry="5" fill="#32CD32" stroke="#228B22" stroke-width="1"/>
                        <ellipse cx="-20" cy="10" rx="12" ry="6" fill="#32CD32" stroke="#228B22" stroke-width="1"/>
                        <ellipse cx="20" cy="10" rx="12" ry="6" fill="#32CD32" stroke="#228B22" stroke-width="1"/>
                        <!-- –ñ–∏–≤–æ—Ç–∏–∫ -->
                        <ellipse cx="0" cy="5" rx="12" ry="8" fill="#90EE90" opacity="0.8"/>
                        <!-- –ü—è—Ç–Ω–∞ -->
                        <circle cx="-10" cy="-5" r="3" fill="#228B22" opacity="0.6"/>
                        <circle cx="12" cy="0" r="2" fill="#228B22" opacity="0.6"/>
                        <circle cx="0" cy="8" r="2.5" fill="#228B22" opacity="0.6"/>
                    </g>
                    
                    <!-- –®–∞–±–ª–æ–Ω –∫—É–≤—à–∏–Ω–∫–∏ -->
                    <g id="lilyPadTemplate">
                        <ellipse cx="0" cy="0" rx="40" ry="25" fill="#228B22" opacity="0.8"/>
                        <ellipse cx="0" cy="0" rx="35" ry="20" fill="#32CD32" opacity="0.9"/>
                        <ellipse cx="0" cy="0" rx="30" ry="15" fill="#90EE90" opacity="0.6"/>
                        <path d="M 35 0 L 30 -5 L 35 5 Z" fill="#228B22"/>
                        <circle cx="0" cy="0" r="3" fill="#FFD700" opacity="0.8"/>
                        <!-- –ü—Ä–æ–∂–∏–ª–∫–∏ –Ω–∞ –ª–∏—Å—Ç–µ -->
                        <path d="M -30 0 Q 0 -5 30 0" stroke="#228B22" stroke-width="1" fill="none" opacity="0.6"/>
                        <path d="M -20 -10 Q 0 -2 20 -10" stroke="#228B22" stroke-width="1" fill="none" opacity="0.4"/>
                        <path d="M -20 10 Q 0 2 20 10" stroke="#228B22" stroke-width="1" fill="none" opacity="0.4"/>
                    </g>
                </defs>
                
                <!-- –§–æ–Ω –≤–æ–¥—ã -->
                <rect width="100%" height="100%" fill="url(#waterGradient)"/>
                
                <!-- –í–æ–¥–Ω—ã–µ —ç—Ñ—Ñ–µ–∫—Ç—ã -->
                <circle cx="150" cy="500" r="30" fill="none" stroke="#4169E1" stroke-width="2" opacity="0.2" class="water-ripple">
                    <animate attributeName="r" values="30;50;30" dur="6s" repeatCount="indefinite"/>
                    <animate attributeName="opacity" values="0.2;0.05;0.2" dur="6s" repeatCount="indefinite"/>
                </circle>
                
                <circle cx="800" cy="450" r="20" fill="none" stroke="#4169E1" stroke-width="2" opacity="0.3" class="water-ripple">
                    <animate attributeName="r" values="20;35;20" dur="5s" repeatCount="indefinite"/>
                    <animate attributeName="opacity" values="0.3;0.05;0.3" dur="5s" repeatCount="indefinite"/>
                </circle>

                <circle cx="500" cy="550" r="25" fill="none" stroke="#4169E1" stroke-width="2" opacity="0.25" class="water-ripple">
                    <animate attributeName="r" values="25;40;25" dur="7s" repeatCount="indefinite"/>
                    <animate attributeName="opacity" values="0.25;0.05;0.25" dur="7s" repeatCount="indefinite"/>
                </circle>
                
                <!-- –ì—Ä—É–ø–ø–∞ –¥–ª—è –∫—É–≤—à–∏–Ω–æ–∫ -->
                <g id="lilyPads"></g>
                
                <!-- –ì—Ä—É–ø–ø–∞ –¥–ª—è –ª—è–≥—É—à–µ–∫ -->
                <g id="frogs"></g>
                
                <!-- –ì—Ä—É–ø–ø–∞ –¥–ª—è —ç—Ñ—Ñ–µ–∫—Ç–æ–≤ -->
                <g id="effects"></g>
            </svg>
        </div>
